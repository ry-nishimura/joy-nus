<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">新規助っ人募集</h2>
      <%= form_with(model: @recruitment, local: true) do |f|%>

        <% if @recruitment.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <ul>
              <% @recruitment.errors.full_messages.each do |message| %>
               <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="field">
          <%= f.label :date, "日付" %><br />
          <div class="input_birth_wrap">
            <%= raw sprintf(
                    f.date_select(
                      :date,
                      class:"select-birth",
                      id:"recruitment-date",
                      use_month_numbers: true,
                      prompt:"--",
                      start_year: (Time.now.year),
                      end_year: (Time.now.year + 1),
                      date_separator: "%s"),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :time, "時間" %><br />
          <div class="input_birth_wrap">
            <%= raw sprintf(
                    f.time_select(
                      :time,
                      class:"select-birth",
                      id:"recruitment-time",
                      prompt:"--",
                      minute_step: 10,
                      time_separator: "%s"),
                    "<p> 時 </p>") + "<p> 分〜 </p>" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :team, "チーム名" %><br />
          <%= f.text_field :team, class: :input__form %>
        </div>

        <div class="field">
          <%= f.label :sport, "競技名" %><br />
          <%= f.text_field :sport, class: :input__form %>
        </div>

        <div class="field">
          <%= f.label :place, "場所" %><br />
          <%= f.text_field :place, class: :input__form %>
        </div>

        <div class="field">
          <%= f.label :position,"ポジション" %><br />
          <%= f.text_field :position, class: :input__form %>
        </div>

        <div class="field">
          <%= f.label :experience_id, "経験の有無" %><br />
          <%= f.collection_select(:experience_id, Experience.all, :id, :name, {}, {class:"input__form", id:"experience-status"}) %>
        </div>

        <div class="actions">
          <%= f.submit "募集する", class: :form__btn %>
        </div>
      <% end %>
    </div>
  </div>
</div>