<div class="main">
  <div class="inner">
    <div class="session__form__wrapper">
      <h2 class="page-heading">ユーザーログイン</h2>

      <%= form_with model: @user, url: user_session_path, local: true do |f| %>

        <div class='login-flash-message'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス", class: :label__text %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: :input__form %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）", class: :label__text %><br/>
          <%= f.password_field :password, autocomplete: "new-password", class: :input__form %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン", class: :form__btn %>
        </div>

      <% end %>

    </div>
  </div>
</div>